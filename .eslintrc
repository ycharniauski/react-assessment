{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb", "plugin:react/recommended"],
  "plugins": ["react-hooks"],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "import/named": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "react/forbid-prop-types": 0,
    "no-alert": 2,
    "no-extra-bind": 2,
    "no-loop-func": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-with": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/button-has-type": [
      1,
      {
        "button": true,
        "submit": true,
        "reset": false
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx", ".es6"]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "caseSensitive": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^.*_",
        "argsIgnorePattern": "^.*_"
      }
    ]
  },
  "globals": {
    "location": true
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
